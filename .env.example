# BookVerse - Configuração de Exemplo

# Servidor
PORT=5000
NODE_ENV=production

# Banco de Dados MongoDB
MONGODB_URI=mongodb://localhost:27017/bookverse

# JWT Secret (ALTERAR OBRIGATORIAMENTE)
JWT_SECRET=GERAR_UMA_CHAVE_SECRETA_FORTE_DE_64_CARACTERES_AQUI

# CORS (Seu domínio)
FRONTEND_URL=https://seudominio.com

# Upload de arquivos
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Configurações VPS
HOSTING_TYPE=vps
SERVE_STATIC=true