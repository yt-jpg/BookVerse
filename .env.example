# ðŸ”§ ConfiguraÃ§Ã£o do Servidor BookVerse
# Copie este arquivo para .env e configure suas variÃ¡veis

# ===== SERVIDOR =====
PORT=5000
NODE_ENV=development
HOST=localhost

# ===== BANCO DE DADOS =====
# Escolha um tipo de banco de dados
DB_TYPE=mongodb
# DB_TYPE=mysql

# MongoDB
MONGODB_URI=mongodb://localhost:27017/bookverse
MONGODB_OPTIONS=retryWrites=true&w=majority

# MySQL (se usar DB_TYPE=mysql)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=sua_senha_mysql
DB_NAME=bookverse

# ===== AUTENTICAÃ‡ÃƒO =====
JWT_SECRET=seu_jwt_secret_super_seguro_aqui_mude_isso
JWT_EXPIRE=7d
REFRESH_TOKEN_SECRET=seu_refresh_token_secret_aqui
REFRESH_TOKEN_EXPIRE=30d

# ===== REDIS (CACHE) =====
# Opcional - para melhor performance
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ===== PERFORMANCE =====
ENABLE_COMPRESSION=true
ENABLE_CACHE=true
CACHE_TTL=3600
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ===== SEGURANÃ‡A =====
ENABLE_FIREWALL=true
ENABLE_RATE_LIMIT=true
ENABLE_HELMET=true
CORS_ORIGIN=http://localhost:3000
BCRYPT_ROUNDS=12

# ===== UPLOAD DE ARQUIVOS =====
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,epub

# ===== EMAIL (OPCIONAL) =====
EMAIL_SERVICE=gmail
EMAIL_USER=seu_email@gmail.com
EMAIL_PASSWORD=sua_senha_app
EMAIL_FROM=BookVerse <noreply@bookverse.com>

# ===== MONITORAMENTO =====
ENABLE_MONITORING=true
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ANALYTICS_ENDPOINT=

# ===== WEBSOCKET =====
ENABLE_WEBSOCKET=true
SOCKET_CORS_ORIGIN=http://localhost:3000

# ===== BACKUP =====
BACKUP_PATH=./backups
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===== SSL/HTTPS =====
ENABLE_HTTPS=false
SSL_KEY_PATH=
SSL_CERT_PATH=

# ===== DESENVOLVIMENTO =====
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_MORGAN_LOGGING=true